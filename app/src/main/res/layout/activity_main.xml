<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@android:color/white">

    <!-- Spacer to push content down -->
    <View
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <!-- Stats container: trophy and fire icons with counts -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="32dp">

            <ImageView
                android:id="@+id/trophyIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_trophy"
                app:tint="#FFB300"
                app:tintMode="src_in"
                android:contentDescription="Trophy Icon"/>

            <TextView
                android:id="@+id/trophyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36sp"
                android:textColor="#FFB300"
                android:layout_marginStart="8dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fireIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_fire"
                android:contentDescription="Fire Icon"/>

            <TextView
                android:id="@+id/fireCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="36sp"
                android:textColor="#FF5722"
                android:layout_marginStart="8dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Timer ring centered -->
    <com.example.productivityapp.TimerRingView
        android:id="@+id/timerRing"
        android:layout_width="325dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal" />

    <!-- Buttons container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="0dp">

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_pause"
            android:background="@android:color/transparent"
            android:contentDescription="Pause Button"
            android:scaleType="fitCenter"
            android:padding="0dp" />

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Timer"
            android:drawableStart="@drawable/ic_timer"
            android:drawableTint="#0000FF"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/button_reset_background"
            android:textColor="#0000FF"
            android:textAllCaps="false"
            android:stateListAnimator="@null"
            android:layout_marginTop="12dp" />
    </LinearLayout>

    <!-- Spacer to push navigation bar to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom navigation bar -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="12dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/levelButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_map"
                app:tint="#000000"
                app:tintMode="src_in"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Levels"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_timer"
                app:tint = "#0000FF"
                app:tintMode="src_in"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timer"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_trophy"
                app:tint="#000000"
                app:tintMode="src_in"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leaderboard"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>